{
  "name": "votingportal-app-tests",
  "version": "4.0.0",
  "description": "This repo consists of UI end to end automated tests for Viewpoint",
  "author": "Quality Guild",
  "license": "ISC",
  "scripts": {
    "open": "cypress open --e2e --browser electron --config specPattern=cypress/**/*.feature",
    "openUltra": "cypress open --e2e --browser electron --env testEnv=ultra --config specPattern=cypress/**/*.feature",
    "test": "cypress run",
    "testUltra": "cypress run --env testEnv=ultra",
    "smoke": "cypress run --config specPattern=cypress/e2e/SmokeTests/*.feature",
    "smokeUltra": "cypress run --env testEnv=ultra --config specPattern=cypress/e2e/SmokeTests/*.feature",
    "regression": "cypress run --config specPattern=cypress/e2e/ViewpointTestSuite/**/*.feature",
    "loadtest": "cypress run --env testEnv=ultra --config specPattern=cypress/loadtest/loadtest-bypassWorkflow.feature,retries=0",
    "loaddocker": "docker compose up --scale cypress=5",
    "lint": "eslint cypress"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "15.1.3",
    "@bahmutov/cypress-esbuild-preprocessor": "2.1.5",
    "cypress": "12.5.1",
    "cypress-multi-reporters": "1.6.2",
    "cypress-sql-server": "1.0.0",
    "eslint-plugin-cypress": "2.12.1",
    "mocha-junit-reporter": "2.2.0",
    "node-stdlib-browser": "1.2.0",
    "node-xlsx": "0.21.0",
    "pdf-parse": "1.1.1",
    "pdf2html": "2.6.7"
  },
  "cypress-cucumber-preprocessor": {
    "stepDefinitions": "cypress/support/step_definitions/*.js",
    "filterSpecs": true,
    "omitFiltered": true,
    "messages": {
      "enabled": true,
      "output": "test-results/cucumber/cucumber-messages.ndjson"
    },
    "html": {
      "enabled": true,
      "output": "test-results/cucumber/cucumber_report.html"
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:cypress/recommended"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://glasslewis@dev.azure.com/glasslewis/Development/_git/VotingPortal-app-tests"
  },
  "keywords": [
    "cypress"
  ]
}