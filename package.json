{
  "name": "votingportal-app-tests",
  "version": "3.0.0",
  "description": "This repo consists of UI end to end automated tests for Viewpoint",
  "author": "Glass Lewis Integration Team",
  "license": "ISC",
  "scripts": {
    "open": "cypress open --e2e --browser electron",
    "test": "cypress run",
    "smoke": "cypress run --config specPattern=cypress/e2e/SmokeTests/*.feature",
    "smoke:parallel": "cypress-parallel -m false -t 3 -s smoke -d 'cypress/e2e'",
    "regression": "cypress run --config specPattern=cypress/e2e/ViewpointTestSuite/**/*.feature",
    "loadtest": "docker compose up --scale cypress=2",
    "lint": "eslint cypress"
  },
  "devDependencies": {
    "cucumber-html-reporter": "5.5.0",
    "cypress": "10.6.0",
    "cypress-cucumber-preprocessor": "4.3.1",
    "cypress-parallel": "0.9.1",
    "cypress-sql-server": "1.0.0",
    "eslint": "8.23.0",
    "eslint-plugin-cypress": "2.12.1",
    "node-xlsx": "0.21.0"
  },
  "cypress-cucumber-preprocessor": {
    "commonPath": "cypress/support/step_definitions",
    "nonGlobalStepDefinitions": false,
    "cucumberJson": {
      "generate": true,
      "outputFolder": "test-results/cucumber/cucumber-json",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://glasslewis@dev.azure.com/glasslewis/Development/_git/VotingPortal-app-tests"
  },
  "keywords": [
    "cypress"
  ]
}
